                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= event['name'] %>
                                </h5>
                                <p class="card-text">
                                    <%= event['location'] %>
                                </p>
                                <ul class="list-group list-group-flush">

                                    <form action="/event" method="post">
                                        <input type="text" value="<%= event['name'] %>" name="name" style="display: none;">
