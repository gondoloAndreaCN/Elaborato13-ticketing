<%- include('./partials/header') %>

<link rel="stylesheet" href="css/reg.css">


    <body>
        <div class="form" data-aos="fade-left">
            <div class="decoration">
                <div data-x="90" class="el" id="el"><i class="fas fa-music"></i></div>
                <div data-x="140" class="el" id="el"><i class="fas fa-glass-cheers"></i></div>
                <div data-x="90" class="el" id="el"><i class="fas fa-ticket-alt"></i></i></div>
            </div>
            <form class="registration needs-validation" method="POST" action="/email-reg" name="reg">
                <h3>Registration:</h3>
                <div class="form-row">
                    <div class="row">
                        <div class="col">
                            <p>Name:</p>
                            <input type="text" class="form-control" placeholder="First name" aria-label="First name"
                                id="fName" name="fName" required>
                        </div>
                        <div class="col">
                            <p>Surname:</p>
                            <input type="text" class="form-control" placeholder="Last name" aria-label="Last name"
                                id="lName" name="lName" required>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col">
                            <p>Email:</p>
                            <input type="email" class="form-control" placeholder="Enter email"
                                aria-describedby="Enter email" id="email" name="email" required>
                        </div>
                        <div class="col">
                            <p>Date of birth:</p>
                            <div class="row">
                                <input type="text" class="form-control" placeholder="dd" aria-describedby="Enter email"
                                    id="dd" name="dd" required>
                                <input type="text" class="form-control" placeholder="mm" aria-describedby="Enter email"
                                    id="mm" name="mm" required>
                                <input type="text" class="form-control" placeholder="yyyy"
                                    aria-describedby="Enter email" id="yyyy" name="yyyy" required>
                            </div>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <div class="col">
                            <p>Password:</p>
                            <input type="password" class="form-control" placeholder="Enter password"
                                aria-describedby="Enter password" id="pwd" name="pwd" required>
                        </div>
                        <div class="col">
                            <p>Confirm:</p>
                            <input type="password" class="form-control" placeholder="Confirm password"
                                aria-describedby="Confirm password" id="pwd1" name="pwd1" required>
                        </div>
                    </div>
                    <hr>
                    <div class="row">
                        <button id="validate" class="btn btn-primary" onclick="test()">Submit</button>
                    </div>
                </div>
            </form>
        </div>

        <script src="js\animation\anime.js"></script>
        <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
        <script src="js/animation/anime.js"></script>
        <script>
            AOS.init();
        </script>
    </body>

    </html>