<%- include('./partials/header') %>

    <head>
        <title>Events</title>
        <link rel="stylesheet" href="css/events.css">
    </head>

    <body>
        <div class="loader">
            <img class="img-loader" src="https://i.giphy.com/media/l3nWhI38IWDofyDrW/giphy.webp" alt="Loading...">
        </div>

        <div class="container container-card">

            <h5>NOTA: Per poter acquistare un evento bisona essere registrati</h5>

            <div class="row">
                <% events.forEach(function(event, index){ %>
                    <div class="col">
                        <div class="card text-center">
                            <img src="/img/event4.jpg" class="card-img-top" alt="img event">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= event['name'] %>
                                </h5>
                                <p class="card-text">
                                    <%= event['location'] %>
                                </p>
                                <ul class="list-group list-group-flush">

                                    <form action="/event" method="post">
                                        <input type="text" value="<%= event['name'] %>" name="name"
                                            style="display: none;">
                                        <input type="text" value="<%= event['location'] %>" name="location"
                                            style="display: none;">
                                        <input type="text" value="<%= event['status'] %>" name="status"
                                            style="display: none;">
                                        <input type="text" value="<%= event['sit'] %>" name="sit"
                                            style="display: none;">
                                        <input type="text" value="<%= event['price'] %>" name="price"
                                            style="display: none;">
                                        <button class="btn btn-primary">Vai all'evento</button>
                                    </form>
                                    <div class="card-footer text-muted">
                                        <p class="card-subtitle mb-2">
                                            stato: <%= event['status'] %>
                                        </p>
                                    </div>

                                </ul>

                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>

    </body>
    <%- include('./partials/footer') %>