                                        <input type="text" value="<%= event['status'] %>" name="status" style="display: none;">
                                        <input type="text" value="<%= event['sit'] %>" name="sit" style="display: none;">
                                        <input type="text" value="<%= event['price'] %>" name="price" style="display: none;">
                                        <button class="btn btn-primary">Go to event</a>
                                    </form>

                                </ul>
                                <div class="card-footer text-muted">
                                    <p class="card-subtitle mb-2">
                                        status: <%= event['status'] %>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>

    </body>
